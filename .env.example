# Database
DATABASE_URL=postgresql://csvuser:csvpassword@postgres:5432/csvimport

# Redis
REDIS_URL=redis://redis:6379/0

# Security - ⚠️ CHANGE THESE FOR PRODUCTION!
# Generate SECRET_KEY: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-this-in-production-to-a-random-secret
# AUTH_TOKEN: Must match the token in frontend config.js
AUTH_TOKEN=demo-auth-token-12345

# Application
ENVIRONMENT=development
DEBUG=true

# Import settings
BATCH_SIZE=1000
MAX_ERROR_SAMPLES=100

# Webhook settings
WEBHOOK_TIMEOUT=30
WEBHOOK_MAX_RETRIES=5

# File upload
MAX_UPLOAD_SIZE=524288000
UPLOAD_DIR=/app/uploads
